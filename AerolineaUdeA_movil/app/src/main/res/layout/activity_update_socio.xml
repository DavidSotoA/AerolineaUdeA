<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UpdateSocioActivity">

    <ScrollView
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input_username_update"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:hint="  nombre de usuario "
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_above="@+id/button"
                    android:minWidth="350dp"
                    android:drawableStart="@drawable/ic_name"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input_nombre_update"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:hint="  Nombres "
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_above="@+id/button_update"
                    android:minWidth="350dp"
                    android:drawableStart="@drawable/ic_name"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input_apellidos_update"
                android:layout_below="@+id/input_nombre_update"
                android:layout_alignLeft="@+id/input_nombre_update"
                android:layout_alignStart="@+id/input_nombre_update">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:hint="  Apellidos "
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_above="@+id/button_update"
                    android:minWidth="350dp"
                    android:drawableStart="@drawable/ic_name"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input_contraseña_update"
                android:layout_below="@+id/input_apellidos_update"
                android:layout_alignRight="@+id/input_nombre_update"
                android:layout_alignEnd="@+id/input_nombre_update">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:hint="  ingresa tu antigua contraseña "
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:layout_above="@+id/button_update"
                    android:minWidth="350dp"
                    android:drawableStart="@drawable/ic_contrasena"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input_contraseña2_update"
                android:layout_below="@+id/input_contraseña_update"
                android:layout_centerHorizontal="true">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:hint="  ingresa la nueva contraseña "
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:layout_above="@+id/button_update"
                    android:minWidth="350dp"
                    android:drawableStart="@drawable/ic_contrasena"/>
            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="elije tu fecha de nacimiento"
                android:id="@+id/input_calendar_button_update" />

            <EditText
                android:layout_width="374dp"
                android:layout_height="wrap_content"
                android:id="@+id/input_calendar_text_update"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input_movil_update"
                android:layout_below="@+id/input_fecha_nacimiento_update"
                android:layout_alignRight="@+id/input_contraseña_update"
                android:layout_alignEnd="@+id/input_contraseña_update">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:hint="  Número movil"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:layout_above="@+id/button_update"
                    android:minWidth="350dp"
                    android:drawableStart="@drawable/ic_movil"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input_correo_update"
                android:layout_below="@+id/input_tarjeta_credito_update"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:hint="  Correo electronico"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:layout_above="@+id/button_update"
                    android:minWidth="350dp"
                    android:drawableStart="@drawable/ic_email"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input_tarjeta_credito_update"
                android:layout_below="@+id/input_movil_update"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:hint="  Número tarjeta de credito"
                    android:inputType="number"
                    android:singleLine="true"
                    android:layout_above="@+id/button_update"
                    android:minWidth="350dp"
                    android:drawableStart="@drawable/ic_tarjeta_credito"/>
            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actualizar informacion"
                android:id="@+id/input_update"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#7C4DFF" />

        </LinearLayout>


    </ScrollView>

</RelativeLayout>
